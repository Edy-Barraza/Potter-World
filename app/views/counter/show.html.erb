<h3> Let's see just how much you know about Harry Potter. Try to pass this exam!</h3>

<%= form_tag('/counter/validate') do -%>

<%@spells.each_with_index do |val,index|%>
  <fieldset class="form-group">
    <legend><%= index+1%>) How many times was the spell "<%= val.name %>" said?</legend>

    <% @options[index].each do |option| %>

    <div class="form-check">
      <label class="form-check-label">
        <input type="radio" class="form-check-input" name="<%=index%>" value="<%= option %>" checked>
       <%= option %>
      </label>
    </div>
    <% end %>
    <input type="text" name="spell_mention_count" value="<%= val.mention_count %>" hidden="true"/>
  </fieldset>

  <% end %>
  <button type="submit" class="btn btn-primary">Submit</button>



<% end -%>
